<Window x:Class="quanliquanao3.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:quanliquanao3"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="15" HorizontalAlignment="Left" Margin="119,112,0,0" TextWrapping="Wrap" Text="Tên đăng nhập:" VerticalAlignment="Top" Height="45" Width="114"/>
        <TextBlock FontSize="15" HorizontalAlignment="Left" Margin="119,0,0,0" TextWrapping="Wrap" Text="Mật Khẩu:" VerticalAlignment="Center" Height="45" Width="114"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Margin="0,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="45" Width="248"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45" Width="248"/>
        <Button Content="Đăng nhập" HorizontalAlignment="Center" Margin="0,303,0,0" VerticalAlignment="Top" Height="58" Width="118" Click="Login_Click"/>


    </Grid>
</Window>
